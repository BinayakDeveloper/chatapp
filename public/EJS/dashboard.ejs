    <main>
      <div class="left">
        <div class="profile" id="<%= user._id %>">
          <div
            class="profile-pic"
            style="--profile-bgcolor: <%= user.colorCode %>"
          >
            <p><%= user.name.slice(0,1).toUpperCase() %></p>
            <div class="online"></div>
          </div>
        </div>

        <!-- <div class="addUser">
          <i class="fa fa-add"></i>
        </div> -->

        <div class="logout">
          <a href="/logout"><i class="fa fa-sign-out"></i></a>
        </div>
      </div>
      <div class="center">
        <div class="center-elements">
          <div class="search">
            <input
              type="text"
              placeholder="Search here"
              autocomplete="off"
              spellcheck="false"
            />
          </div>
          <div class="recentUsers">
            <% allUsers.forEach((val)=>{ %>
            <div class="user" id="<%= val._id %>">
              <div
                class="user-profilepic"
                style="--profile-bgcolor: <%= val.colorCode %>"
              >
                <p><%= val.name.slice(0, 1).toUpperCase() %></p>
              </div>
              <div class="user-details">
                <div class="name">
                  <p><%= val.name %></p>
                </div>
                <div class="status">
                  <p id="<%= val.uid %>"><%= val.onlineStatus %></p>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <div class="right">
        <div class="sessionStart">
          <div class="logo">
            <img src="/logo.png" />
          </div>
          <div class="details">
            <p>Bichat</p>
            <p>Tap on users to start a chat</p>
          </div>
        </div>
        <div class="chatElements">
          <div class="chatHeading">
            <div class="userDetails">
              <div class="user-profile-pic">
                <p id="chat-profilepic"></p>
              </div>
              <div class="userName">
                <p id="chat-username"></p>
                <p id="chat-onlineStatus" aria-details=""></p>
              </div>
            </div>
            <div class="chatOptions">
              <i class="fa fa-ellipsis"></i>
              <div class="optionMenu">
                <ul>
                  <li id="clearchat">Clear Chat</li>
                </ul>
              </div>
            </div>
          </div>
          <div class="chatSection">
            <div class="chats"></div>
          </div>

          <div class="sendMessage">
            <div class="text-inp">
              <textarea
                placeholder="Type a message"
                autocomplete="off"
                spellcheck="false"
              ></textarea>
              <i
                class="fa fa-paper-plane"
                style="--size: 1.2rem; --margin: 0"
              ></i>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
